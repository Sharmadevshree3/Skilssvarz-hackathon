        <div class="master_play">
            <audio id="current_audio" controls></audio>
        </div>
    </header>

    <!-- Audio Trimmer Modal -->
    <div class="modal-overlay" id="trimModal">
        <div class="trim-modal">
            <h2><i class="bi bi-scissors"></i> Trim Audio</h2>
            
            <audio id="preview_audio" controls></audio>
            
            <div class="trim-controls">
                <div class="range-container">
                    <label>Start:</label>
                    <input type="range" id="startRange" min="0" max="100" value="0">
                </div>
                <div class="range-container">
                    <label>End:</label>
                    <input type="range" id="endRange" min="0" max="100" value="100">
                </div>
                <div class="time-display">
                    <span id="startTime">0:00</span> - <span id="endTime">0:00</span>
                    (Duration: <span id="durationTime">0:00</span>)
                </div>
            </div>
            
            <div class="trim-actions">
                <button class="cancel-btn" id="cancelTrim">Cancel</button>
                <button class="trim-btn" id="applyTrim">Apply & Add to Playlist</button>
            </div>
        </div>
    </div>

    <script>
        // Add click effect to playlist items
        const playlistItems = document.querySelectorAll('.playlist h1');
        playlistItems.forEach(item => {
            item.addEventListener('click', function() {
                playlistItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Song player functionality
        const audioPlayer = document.getElementById('current_audio');
        const songItems = document.querySelectorAll('.songItem');
        let currentlyPlaying = null;

        songItems.forEach(item => {
            item.addEventListener('click', function(e) {
                // Don't trigger if clicking the trim button
                if (e.target.closest('.trim-btn-song')) return;
                
                const audioSrc = this.getAttribute('data-audio');
                
                // If this song is already playing, pause it
                if (currentlyPlaying === this) {
                    audioPlayer.pause();
                    this.classList.remove('playing');
                    currentlyPlaying = null;
                    return;
                }
                
                // Otherwise, play the new song
                if (currentlyPlaying) {
                    currentlyPlaying.classList.remove('playing');
                }
                
                audioPlayer.src = audioSrc;
                audioPlayer.play()
                    .then(() => {
                        this.classList.add('playing');
                        currentlyPlaying = this;
                        
                        // Show now playing indicator
                        const nowPlaying = this.querySelector('.now_playing');
                        nowPlaying.style.display = 'block';
                        
                        // Hide other now playing indicators
                        document.querySelectorAll('.now_playing').forEach(el => {
                            if (el !== nowPlaying) el.style.display = 'none';
                        });
                    })
                    .catch(error => {
                        console.error('Error playing audio:', error);
                        alert('Error playing audio. Please try another song.');
                    });
            });
        });

        // Audio events to handle playback state
        audioPlayer.addEventListener('play', function() {
            if (currentlyPlaying) {
                currentlyPlaying.classList.add('playing');
            }
        });

        audioPlayer.addEventListener('pause', function() {
            if (currentlyPlaying) {
                currentlyPlaying.classList.remove('playing');
            }
        });

        audioPlayer.addEventListener('ended', function() {
            if (currentlyPlaying) {
                currentlyPlaying.classList.remove('playing');
                currentlyPlaying = null;
            }
        });

        // Singer card click functionality
        const singerCards = document.querySelectorAll('.singer-card');
        singerCards.forEach(card => {
            card.addEventListener('click', function() {
                const singerName = this.querySelector('.singer-name').textContent;
                alert('Playing songs by ${singerName}');

                // In a real app, you would load the singer's songs here
            });
        });

        // Song category tabs functionality
        const categoryTabs = document.querySelectorAll('.song-categories button');
        const songSections = document.querySelectorAll('.song-section');

        categoryTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                const targetId = this.getAttribute('data-target');
                
                // Update active tab
                categoryTabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // Show corresponding section
                songSections.forEach(section => {
                    section.classList.remove('active');
                    if (section.id === targetId) {
                        section.classList.add('active');
                    }
                });
            });
        });

        // Audio Trimmer Functionality
        const trimModal = document.getElementById('trimModal');
        const previewAudio = document.getElementById('preview_audio');
        const startRange = document.getElementById('startRange');
        const endRange = document.getElementById('endRange');
        const startTime = document.getElementById('startTime');
        const endTime = document.getElementById('endTime');
        const durationTime = document.getElementById('durationTime');
        const cancelTrimBtn = document.getElementById('cancelTrim');
        const applyTrimBtn = document.getElementById('applyTrim');
        const trimButtons = document.querySelectorAll('.trim-btn-song');

        let currentAudioSrc = '';
        let currentSongName = '';
        let currentCoverImage = '';
        let audioDuration = 0;

        // Format time from seconds to MM:SS
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs < 10 ? '0' : ''}${secs}`;

        }

        // Open trim modal
        trimButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation();
                const songItem = this.closest('.songItem');
                currentAudioSrc = songItem.getAttribute('data-audio');
                currentSongName = songItem.querySelector('p').textContent;
                currentCoverImage = songItem.querySelector('img').src;
                
                previewAudio.src = currentAudioSrc;
                trimModal.style.display = 'flex';
                
                // Reset ranges
                startRange.value = 0;
                endRange.value = 100;
                
                // Wait for audio metadata to load
                previewAudio.onloadedmetadata = function() {
                    audioDuration = previewAudio.duration;
                    durationTime.textContent = formatTime(audioDuration);
                    endTime.textContent = formatTime(audioDuration);
                };
            });
        });

        // Update time displays when ranges change
        startRange.addEventListener('input', function() {
            const startValue = (this.value / 100) * audioDuration;
            startTime.textContent = formatTime(startValue);
            
            // Ensure start is before end
            if (parseInt(this.value) >= parseInt(endRange.value)) {
                this.value = endRange.value - 1;
            }
            
            // Preview the audio at the start point
            previewAudio.currentTime = startValue;
        });

        endRange.addEventListener('input', function() {
            const endValue = (this.value / 100) * audioDuration;
            endTime.textContent = formatTime(endValue);
            
            // Ensure end is after start
            if (parseInt(this.value) <= parseInt(startRange.value)) {
                this.value = parseInt(startRange.value) + 1;
            }
        });

        // Cancel trimming
        cancelTrimBtn.addEventListener('click', function() {
            trimModal.style.display = 'none';
            previewAudio.pause();
        });

        // Apply trimming and add to playlist
        applyTrimBtn.addEventListener('click', function() {
            const startValue = (startRange.value / 100) * audioDuration;
            const endValue = (endRange.value / 100) * audioDuration;
            
            // In a real app, you would:
            // 1. Use the Web Audio API to actually trim the audio
            // 2. Save the trimmed audio (either to server or localStorage)
            // 3. Add the new trimmed version to your playlist
            
            // For this demo, we'll just add a new item with the trim info
            const playlist = document.querySelector('.playlist h1.active');
            if (playlist) {
                // Create a new playlist item
                const newPlaylistItem = document.createElement('h1');
                newPlaylistItem.innerHTML = `<i class="bi bi-scissors"></i> ${currentSongName} (Trimmed)`;

                // Insert after the active playlist item
                playlist.parentNode.insertBefore(newPlaylistItem, playlist.nextSibling);
                
                // Show success message
                alert(`Audio trimmed from ${formatTime(startValue)} to ${formatTime(endValue)} and added to playlist!`);
            }
            
            // Close modal
            trimModal.style.display = 'none';
            previewAudio.pause();
        });

        // Close modal when clicking outside
        trimModal.addEventListener('click', function(e) {
            if (e.target === trimModal) {
                trimModal.style.display = 'none';
                previewAudio.pause();
            }
        });

        // Horizontal scrolling for all song sections
        function setupHorizontalScrolling(containerId, leftBtnId, rightBtnId) {
            const container = document.getElementById(containerId);
            const leftBtn = document.getElementById(leftBtnId);
            const rightBtn = document.getElementById(rightBtnId);

            if (leftBtn && rightBtn && container) {
                leftBtn.addEventListener('click', () => {
                    container.scrollBy({ left: -200, behavior: 'smooth' });
                });

                rightBtn.addEventListener('click', () => {
                    container.scrollBy({ left: 200, behavior: 'smooth' });
                });
            }
        }

        // Setup scrolling for all sections
        setupHorizontalScrolling('popular_songs', 'left_scroll_popular', 'right_scroll_popular');
        setupHorizontalScrolling('english_songs', 'left_scroll_english', 'right_scroll_english');
        setupHorizontalScrolling('hindi_songs', 'left_scroll_hindi', 'right_scroll_hindi');
        setupHorizontalScrolling('haryanvi_songs', 'left_scroll_haryanvi', 'right_scroll_haryanvi');
        setupHorizontalScrolling('south_songs', 'left_scroll_south', 'right_scroll_south');
    </script>
</body>
</html>
